@model EmployeeHR.Models.PayrollModel

@{
    ViewBag.ActionName = Model == null ? "Create" : "Edit";
    ViewData["Title"] = ViewBag.ActionName ;
}

<h1>Create</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewBag.ActionName">
            

            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class ="form-control" asp-items="@(new SelectList(ViewBag.EmployeeList,"Id","Name"))">
                    <option value="">-select Employee-</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PayrollDate" class="control-label"></label>
                <input asp-for="PayrollDate" class="form-control" />
                <span asp-validation-for="PayrollDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bonus" class="control-label"></label>
                <input asp-for="Bonus" class="form-control" />
                <span asp-validation-for="Bonus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SSa" class="control-label"></label>
                <input asp-for="SSa" class="form-control" />
                <span asp-validation-for="SSa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leaves" class="control-label"></label>
                <input asp-for="Leaves" class="form-control" />
                <span asp-validation-for="Leaves" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetSalary" class="control-label"></label>
                <input asp-for="NetSalary" class="form-control" readonly value="0"/>
               
            </div>

            @if (ViewBag.ActionName == "Edit")
            {

                <div class="form-group">
                    <label asp-for="TS" class="control-label"></label>
                    <input asp-for="TS" class="form-control" readonly />
                    <span asp-validation-for="TS" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedBy" class="control-label"></label>
                    <input asp-for="CreatedBy" class="form-control" readonly/>
                    <span asp-validation-for="CreatedBy" class="text-danger"></span>
                </div>
            }
            

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
